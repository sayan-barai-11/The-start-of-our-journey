#include <stdio.h>
int main(){
    int i;
    int n;
    printf("enter the size of the array : ");
    scanf("%d",&n);
    int arr[n];
    printf("enter the elm of array : ",n);
    for (i=0;i<n;i++){
        scanf("%d",&arr[i]);
    }
    int x = 6;
    for (i=0;i<n;i++){
        if(arr[i]==x){
            printf("the index is: %d",i);
            break ;
            return 0;
        }  
    }
    printf("-1");
    return 0;
}
